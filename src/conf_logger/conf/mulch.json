{
  "version": 1,
  "formatters": {
    "detailed": {
      "class": "logging.Formatter",
      "format": "%(asctime)s %(name)-15s %(levelname)-13s %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "detailed"
    },
    "file": {
      "class": "logging.FileHandler",
      "filename": "log/mplog.log",
      "mode": "w",
      "formatter": "detailed"
    },
    "foofile": {
      "class": "logging.FileHandler",
      "filename": "log/mplog-foo.log",
      "mode": "w",
      "formatter": "detailed"
    },
    "errors": {
      "class": "logging.FileHandler",
      "filename": "log/mplog-errors.log",
      "mode": "w",
      "level": "ERROR",
      "formatter": "detailed"
     }
  },
  "loggers": {
    "foo": {
      "handlers": ["foofile"]
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": ["console", "file", "errors"]
  }
}